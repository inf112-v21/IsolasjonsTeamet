<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%-5level] [%date{HH:mm:ss.SSS}] [%logger{36}] [%thread]: %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.netty" level="INFO" />

    <logger name="inf112.isolasjonsteamet.roborally.network.impl" level="TRACE" />

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>